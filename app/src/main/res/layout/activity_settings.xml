<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Settings"
    android:gravity="center"
    android:background="@color/background">

        <EditText
            android:id="@+id/etTitle2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Title...."
            android:inputType="textPersonName"
            android:text="New Diary Travel"
            android:layout_below="@+id/tv2"/>

        <EditText
            android:id="@+id/etContent2"
            android:layout_below="@id/etTitle2"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Content...."
            android:inputType="textPersonName"
            android:text="Go write your next diary travel now!"/>

        <Button
            android:id="@+id/btnNotify2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Schedule Notification"
            android:layout_below="@id/etContent2"/>

        <Button
            android:id="@+id/btnCancel2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:layout_below="@+id/btnNotify2"
            />

        <TextView
            android:id="@+id/tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Notification"
            android:layout_marginTop="3dp"
            />

        <Switch
            android:id="@+id/sw1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="90dp"/>

        <TextView
            android:id="@+id/tv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dark Mode"
            android:layout_marginTop="30dp"/>

        <Switch
            android:id="@+id/sw2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="28dp"/>



</RelativeLayout>